set ideajoin


" Integrate with system clipboard
set clipboard=unnamedplus,unnamed,ideaput

let mapleader = " "

imap ,. <Esc>
vmap ,. <Esc>

nmap <leader>h <c-w>h
nmap <leader>l <c-w>l
nmap <leader>k <c-w>k
nmap <leader>j <c-w>j

nmap <leader>r :action Run<CR>

nmap <leader>b :action GotoDeclaration<CR>
nmap <leader>e :action GotoNextError<CR>
nmap <leader>E :action GotoPreviousError<CR>

nmap <leader>gk :action ChangesView.ToggleCommitUi<CR>
nmap <leader>gp :action Vcs.Push<CR>
nmap <leader>gu :action Vcs.UpdateProject<CR>
nmap <leader>gb :action Git.Branches<CR>
nmap <leader>gn :action Git.CreateNewBranch<CR>


